
#:import MapView kivy.garden.mapview.MapView
#:import MDFloatingActionButton kivymd.uix.button.MDFloatingActionButton
#:import images_path kivymd.images_path




<MyApplication>:
    MDBoxLayout:
        orientation: 'vertical'
        size : root.width, root.height  
              
        MDBottomNavigation:
            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Travel'
                icon: 'directions'
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1
                    
                    MapView: #cordinates of Machala    
                        lat: -3.258111
                        lon: -79.955392
                        zoom: 13
                        on_zoom:
                            self.zoom = 13 if self.zoom < 13 else self.zoom 
                        on_lat: 
                            print ('lat:', self.lat)
                        on_lon:
                            print ('lon:', self.lat)
                    MapMarkerPopup: # no funciona o no aparece . 
                        lat: -3.258111
                        lon: -79.955392        
                        
                MDFloatingActionButton:  
                    elevation: 36  
                    icon: 'google-maps' 
                    icon_size: '64sp'
                    pos_hint: {'center_x' : .95 , 'center_y': 0.50 } 
                    on_press: root.on_press_buttom1 ()
                    


                    
                MDFloatingActionButton: 
                    elevation: 36  
                    icon: 'alert'  
                    icon_size: '20sp'
                    pos_hint: {'center_x' : .95 , 'center_y': 0.35 }
                    on_press: root.on_press_buttom2 () 

            
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, .25
                    padding: 20
                    md_bg_color: [0,0.1,0.8,1]  
                    spacing: 20 
                   
                    MDTabs:
                        tab_bar_height: 55
                        tab_indicator_type: 'fill'
                        background_color: [1,1,1,0.2] 
                        
                             
                        
                        Tab: 
                            text: 'Start Trip'
                                 
                            MDRoundFlatIconButton:          
                                text: 'Where do you wanna travel?'
                                size_hint: 1, .69
                                icon: 'magnify'
                                md_bg_color: [255,255,255]
                                #theme_text_color: 'Secondary'
                                text_color: 'yellow'                
                        Tab:
                            text: 'Next Of Kin'
                            MDRoundFlatIconButton:              
                                text: 'Who do you wanna contact?'
                                size_hint: 1, .69
                                icon: 'magnify'
                                md_bg_color: [255,255,255]
                                #theme_text_color: 'Secondary'
                                text_color: 'yellow'

                    MDRoundFlatIconButton:
                        icon: 'plus'
                        text: 'Add Contact'             

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Report'
                icon: 'pin' 


            MDBottomNavigationItem:
                name: 'screen 3'
                text: ' More'
                icon: 'more' 